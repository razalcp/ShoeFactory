  <script>
    const email = document.getElementById('email')
    const error1 = document.getElementById('error1')
    const password = document.getElementById('newPassword')
    const error2 = document.getElementById('error2')
    const confirmPassword = document.getElementById('confirmPassword')
    const error3 = document.getElementById('error3')
    const error4 = document.getElementById('error4')
    const otpTag = document.getElementById('otp')




    function emailvalidate() {
      const emailval = email.value
      const emailpattern = /^([a-zA-Z][a-zA-Z0-9._-]*)@(gmail\.com|yahoo\.com|outlook\.com)$/

      if (!emailpattern.test(emailval)) {
        error1.style.display = 'block'
        error1.innerHTML = 'Invalid Format!! Enter a valid email address'
      } else {
        error1.style.display = 'none'
        error1.innerHTML = ""
      }

    }


    function passwordValidate(e) {
      const passval = password.value
      const alpha = /[a-zA-Z]/
      const digit = /\d/
      if (passval.length < 8) {
        error2.style.display = "block"
        error2.innerHTML = "Must have atleast 8 characters"
      }
      else if (!alpha.test(passval) || !digit.test(passval)) {
        error2.style.display = "block"
        error2.innerHTML = "Should contain Numbers and Alphabets!!"
      }
      else {

        error2.style.display = "none"
        error2.innerHTML = ""
      }
    }

    function confirmPasswordValidate() {
      const passval = confirmPassword.value
      const alpha = /[a-zA-Z]/
      const digit = /\d/
      if (passval.length < 8) {
        error3.style.display = "block"
        error3.innerHTML = "Must have atleast 8 characters"
      }
      else if (!alpha.test(passval) || !digit.test(passval)) {
        error3.style.display = "block"
        error3.innerHTML = "Should contain Numbers and Alphabets!!"
      }
      else {

        error3.style.display = "none"
        error3.innerHTML = ""
      }
    }

      function validateOtp() {

        let otpvalue = otpTag.value
        console.log(otpvalue);
        if(otpvalue.length<7){
          error4.style.display = 'block'
          error4.innerHTML = 'Must have atleast 6 characters'
        } else {
          error4.style.display='none'
          error4.innerHTML=''
        }
      }

    email.addEventListener('blur', emailvalidate)
    password.addEventListener('blur', passwordValidate)
    confirmPassword.addEventListener('blur', confirmPasswordValidate)
    otpTag .addEventListener('blur',validateOtp)
  </script>









  <script>
    const usrid = document.getElementById('userid').value
    const otp = document.getElementById('sendotp')


    console.log(otp)
    async function sendOTP(usrid) {
      try {
        const res = await fetch(`/sendotp?userid=${usrid}`)
        const data = await res.json()
        if (data.success) {
          console.log("OTP success")
          timerstart()
        }
        else {
          console.log("OTP sent failed")
        }
      } catch (error) {
        console.log(error.message)
      }
    }

    otp.addEventListener('click', () => {
      sendOTP(usrid)
    })

    const timer = document.getElementById('timer')
    let seconds = 60

    function showtime() {
      timer.style.display = "block"
      timer.innerHTML = `OTP expires in ${seconds}sec`;

    }

    function timerstart() {
      showtime();

      if (seconds == 0) {
        otp.innerHTML = `Resend OTP`
      }
      if (seconds > 0) {
        seconds--
        setTimeout(timerstart, 1000)
      } else {
        timer.style.display = "block";
        timer.innerHTML = `OTP has been expired`
        seconds = seconds + 60;
      }
    }


  </script>
