    <script>
        function confirmBlockUser(userId) {
            Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, block it!"
    }).then((result) => {
        if (result.isConfirmed) {
            blockuser(userId); // Assuming blockProduct is your function to block the product
            Swal.fire({
                title: "Blocked!",
                text: "The product has been blocked.",
                icon: "success"
            });
        }
    });
    }

    function confirmUnblockUser(userId) {
        Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, Unblock it!"
    }).then((result) => {
        if (result.isConfirmed) {
            unblockuser(userId); // Assuming blockProduct is your function to block the product
            Swal.fire({
                title: "UnBlocked!",
                text: "The product has been Unblocked.",
                icon: "success"
            });
        }
    });
    }

        async function blockuser(userid){
            
            try{
                console.log("Entered blockuser");
                url = `http://localhost:3003/admin/usermanagement/block?id=${userid}`
            
            const response = await fetch(url);
            if(response.ok) {
                const data = await response.json();
                console.log(data);
                // console.log(data.data);
                window.location.reload();
             } else {
                console.error(`Error:${response.status}`);
             }    
        } catch (err) {
            console.error(err);
        }
    }

    async function unblockuser(userid){
            try{
                console.log("Entered blockuser");
                url = `http://localhost:3003/admin/usermanagement/unblock?id=${userid}`
            
            const response = await fetch(url);
            if(response.ok) {
                const data = await response.json();
                console.log(data.data);
                window.location.reload();
             } else {
                console.error(`Error:${response.status}`);
             }    
        } catch (err) {
            console.error(err);
        }
    }
